{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@game-companion/context": ["libs/context/src/index.ts"],
      "@game-companion/context/*": ["libs/context/*/index.ts"],
      "@game-companion/core": ["libs/core/src/lib/index.ts"],
      "@game-companion/core/*": ["libs/core/src/*/index.ts"],
      "@game-companion/lit": ["libs/lit/src/index.ts"],
      "@game-companion/mdc": ["libs/mdc/src/lib/index.ts"],
      "@game-companion/mdc/*": ["libs/mdc/src/*/index.ts"],
      "@game-companion/tfm": ["libs/tfm/src/lib/index.ts"],
      "@game-companion/tfm/*": ["libs/tfm/src/*/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp", "dist"]
}
